{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Error"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seqs:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "BffCheckout"
    }
  },
  
  "ShoppingCartUrl": "https://devstore-api-cart:5201",
  "CatalogUrl": "https://devstore-api-catalog:5301",
  "CustomerUrl": "https://devstore-api-customers:5401",
  "PaymentUrl": "https://devstore-api-billing:5601",
  "OrderUrl": "https://devstore-api-order:5701",

  "MessageQueueConnection": {
    "MessageBus": "host=devstore-rabbit:5672;publisherConfirms=true;timeout=30;username=devstore;password=devstore"
  },
  "AppSettings": {
    "JwksUri": "https://devstore-api-identity:5101/jwks",
    "Issuer": "https://devstore.academy",
    "Audience": "DevStore"
  }
}